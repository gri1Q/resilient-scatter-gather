# Общие
ENV=local                     # соответствует env: "local" в YAML
LOG_LEVEL=debug               # ваш существующий LOG_LEVEL (не в YAML, но полезно)

# Путь к локальному хранилищу
STORAGE_PATH=./storage/       # storage_path: "./storage/"

# HTTP сервер
# http_server.address
HTTP_ADDRESS=localhost:8080
HTTP_HOST=localhost
# ваш существующий APP_PORT — порт сервера
APP_PORT=8080
# Таймауты (time.Duration в Go, формат: 4s, 60s и т.д.)
# http_server.timeout
HTTP_TIMEOUT=4s
# http_server.idle_timeout
HTTP_IDLE_TIMEOUT=60s

# Параметры базы данных (развернутые поля)
# database_server.driver
DB_DRIVER=postgres
# database_server.host
DB_HOST=localhost
# database_server.port
DB_PORT=5432
# database_server.user
DB_USER=user
# database_server.password
DB_PASSWORD=secret
# database_server.dbname
DB_NAME=database
# database_server.sslmode
DB_SSLMODE=disable

DB_URL=postgres://${DB_USER}:${DB_PASSWORD}@${DB_HOST}:${DB_PORT}/${DB_NAME}?sslmode=${DB_SSLMODE}